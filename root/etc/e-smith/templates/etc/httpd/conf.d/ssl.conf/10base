LoadModule ssl_module modules/mod_ssl.so
Listen 443

SetEnvIf User-Agent ".*MSIE.*" nokeepalive ssl-unclean-shutdown downgrade-1.0 force-response-1.0

{ $httpd{SSLCertificateChainFile} ? '' : '# '}SSLCertificateChainFile { $httpd{SSLCertificateChainFile} }
{ $httpd{SSLCertificateFile} ? '' : '# '}SSLCertificateFile { $httpd{SSLCertificateFile} }
{ $httpd{SSLCertificateKeyFile} ? '' : '# '}SSLCertificateKeyFile { $httpd{SSLCertificateKeyFile} }

SSLCipherSuite {$httpd{SSLCipherSuite}};
SSLPassPhraseDialog  builtin
SSLSessionCache         shmcb:/var/cache/mod_ssl/scache(512000)
SSLSessionCacheTimeout  300
SSLMutex  file:state/ssl_mutex
SSLRandomSeed startup file:/dev/urandom 512
SSLRandomSeed connect builtin

SSLProtocol all {'-SSLv2' unless defined $httpd{SSLv2} && $httpd{SSLv2} eq 'enabled'}

